
@{
    ViewBag.Title = "XuLyHangTonKho";
    Layout = "~/Areas/AdminPage/Views/Shared/_LayoutPage.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}

<h2>Quản lý đơn hàng ( Đơn hàng chưa thanh toán )</h2>
 </br>

<ul class="nav nav-tabs">
    <li role="presentation" class="active">
        <a></a>
    </li>

    <li role="presentation">
        <a></a>
    </li>

    <li role="presentation">
        <a></a>
    </li>
</ul>

@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaDDH", header: "Mã Đơn hàng"),
        grid.Column("MaKH", header: "Họ tên khách hàng", format: p => p.MaKH != null ? p.KhachHang.TenKH != null : ""),
        grid.Column("NgayDat", header: "Ngày Đặt"),
        grid.Column("TinhTrangDH", header: "Tình trạng đơn hàng"),
        grid.Column("NgayGiao", header: "Ngày Giao"),
        grid.Column("DaThanhToan", header: "Đã Thanh Toán"),
        grid.Column("DaXoa", header: "Đã hủy"),
    grid.Column(format: p => Html.ActionLink("Duyệt đơn hàng", "DuyetDonHang", new { id = p.MaDDH }, new { @target = "_blank" }))
))

