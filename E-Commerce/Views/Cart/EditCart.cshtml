@using E_Commerce.Models
@model CartItem
@{
    ViewBag.Title = "EditCart";
    Layout = "~/Views/Layout/Cart.cshtml";
}
@{
    List<CartItem> lstCart = ViewBag.CartItem as List<CartItem>;
}

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate fadeInUp ftco-animated">
                <div class="cart-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        @foreach (var item in lstCart)
                        {
                            <tbody id="CartItem">
                                @using (Html.BeginForm("UpdateCart", "Cart"))
                                {
                                    <tr class="text-center">
                                        <td class="image-prod"><div class="img" style="background-image:url(/Content/images/SanPham/@item.HinhAnh)"></div></td>
                                        <td class="product-name">
                                            <h3>@item.TenSP</h3>
                                            @Html.Hidden("MaSP", item.MaSP)
                                        </td>
                                        <td class="price">@item.DonGia.ToString("#,##")</td>
                                        @*<td class="quantity ">@item.SoLuong</td>*@
                                        <td class="quantity">
                                            <div class="input-group mb-3">
                                                @Html.TextBox("SoLuong", item.SoLuong, new { @class = "quantity form-control input-number" })
                                            </div>
                                        </td>
                                        <td class="total">@item.TongTien.ToString("#,##")</td>
                                    </tr><!-- END TR-->
                                }
                            </tbody>
                            <input type="submit" value="Cập nhật giỏ hàng" />
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


